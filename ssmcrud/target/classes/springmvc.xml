<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
       xmlns:mvc="http://www.springframework.org/schema/mvc"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
      http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
      http://www.springframework.org/schema/context
      http://www.springframework.org/schema/context/spring-context-3.2.xsd
      http://www.springframework.org/schema/mvc
      http://www.springframework.org/schema/mvc/spring-mvc-3.2.xsd">
    <!--开启注解扫描，只扫描controller-->
    <context:component-scan base-package="cn.itcast">
        <context:include-filter type="annotation" expression="org.springframework.stereotype.Controller"/>
    </context:component-scan>
    <bean id="internalResourceViewResolver" class="org.springframework.web.servlet.view.InternalResourceViewResolver">
        <property name="prefix" value="/WEB-INF/pages/"/>
        <property name="suffix" value=".jsp"/>
    </bean>
    <!--设置静态资源不过滤-->
    <mvc:resources mapping="static/bootstrap-3.4.1-dist/css/**" location="static/bootstrap-3.4.1-dist/css/"/>
    <mvc:resources mapping="static/bootstrap-3.4.1-dist/images/**" location="static/bootstrap-3.4.1-dist/images/"/>
    <mvc:resources mapping="static/bootstrap-3.4.1-dist/js/**" location="static/bootstrap-3.4.1-dist/js/"/>

    <mvc:annotation-driven/>
</beans>